<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/6.0/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="./vendor/autoload.php"
>
    <testsuites>
        <testsuite name="all">
            <directory>Beotie/PSR7/DTOBridge/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>Beotie/PSR7/DTOBridge</directory>
            <exclude>
                <directory>Beotie/PSR7/DTOBridge/Tests</directory>
            </exclude>
        </whitelist>
    </filter>
    
    <logging>
        <log type="coverage-html" target="doc/coverage" lowUpperBound="80" highLowerBound="95"/>
        <log type="junit" target="doc/phpunit_logfile.xml" />
    </logging>
</phpunit>
